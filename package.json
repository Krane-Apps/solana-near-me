{
  "name": "nearme",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "process-merchants": "node src/scripts/processMerchantData.js",
    "upload-merchants": "node src/scripts/uploadMerchantsSimple.js",
    "upload-realtime": "node src/scripts/uploadToRealtimeDB.js",
    "test-realtime": "node src/scripts/testRealtimeDB.js",
    "test-realtime-integration": "node src/scripts/testRealtimeIntegration.js",
    "test-app-integration": "node src/scripts/testAppIntegration.js",
    "test-firebase-app": "node src/scripts/testFirebaseInApp.js",
    "test-upload": "node src/scripts/testUpload.js",
    "test-fetch": "node src/scripts/testMerchantFetch.js",
    "build:dev": "npx eas build --profile development --platform android --local",
    "build:dev-cloud": "npx eas build --profile development --platform android",
    "build:preview": "npx eas build --profile preview --platform android --local",
    "build:production": "npx eas build --profile production --platform android --local",
    "install:emulator": "adb install -r dist/*.apk",
    "install:device": "adb install -r dist/*.apk",
    "run:emulator": "npx expo run:android --device",
    "prebuild": "npx expo prebuild --clean",
    "clean": "npx expo install --fix && rm -rf node_modules && npm install",
    "clean:android": "cd android && ./gradlew clean && cd ..",
    "build:android": "cd android && ./gradlew assembleDebug && cd ..",
    "install:debug": "adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "build-and-install": "bash scripts/build-and-install.sh",
    "quick-build": "npm run prebuild && npm run build:android && npm run install:debug",
    "restore-png-icons": "bash scripts/restore-png-icons.sh",
    "restore-png-simple": "git restore android/app/src/main/res/mipmap-*/ && rm -f android/app/src/main/res/mipmap-*/*.webp"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-clipboard/clipboard": "^1.16.3",
    "@react-native-firebase/app": "^22.4.0",
    "@react-native-firebase/database": "^22.4.0",
    "@react-native-firebase/firestore": "^22.4.0",
    "@react-navigation/bottom-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "@solana-mobile/mobile-wallet-adapter-protocol": "^2.2.2",
    "@solana-mobile/mobile-wallet-adapter-protocol-web3js": "^2.2.2",
    "@solana/pay": "^0.2.5",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.2",
    "@types/react-native-vector-icons": "^6.4.18",
    "bignumber.js": "^9.3.1",
    "buffer": "^6.0.3",
    "expo": "~53.0.17",
    "expo-blur": "~14.1.5",
    "expo-dev-client": "~5.2.4",
    "expo-linear-gradient": "^14.1.5",
    "expo-location": "^18.1.6",
    "expo-status-bar": "~2.2.3",
    "firebase-admin": "^13.4.0",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-confetti-cannon": "^1.5.2",
    "react-native-flash-message": "^0.4.2",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-get-random-values": "^1.11.0",
    "react-native-maps": "1.20.1",
    "react-native-permissions": "^5.4.1",
    "react-native-qrcode-svg": "^6.3.15",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "^4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-vector-icons": "^10.2.0",
    "react-native-webview": "^13.15.0",
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.0.10",
    "typescript": "~5.8.3"
  },
  "private": true
}
